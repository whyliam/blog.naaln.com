
// 首页
.brand {
  background: transparent;
}

.site-title {
  font: bold 44px/1.22 "Times New Roman", Georgia, Times, sans-serif;
  color: #555;
}

@media (max-width: 767px) {
  .site-title {
    font-size: 32px;
  }
}

.menu .menu-item a {
  font-size: 14px;
}

.header-inner {
  padding: 70px 0 20px;
}


.posts-expand .post-title {
  margin: 3px 0 20px 0;
  font-size: 28px;
  font-weight: 600;
}

.posts-expand .post-meta {
  margin: 3px 0 5px 0;
}

.posts-expand .post-body {
  font-size: 16px;
}

.posts-expand .post-body img {
  max-width: 80%;
  max-height:500px;
}

@media (max-width: 767px) {
   .posts-expand .post-body img {
        max-width: 90%;
    }
}

// 文章
.post-body p {
  margin: 0 0 10px 0;
  font-family: -apple-system, "Helvetica Neue", Arial, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: 'FZYANS_XIAN', -apple-system, "Helvetica Neue", Arial, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
}

@media (max-width: 767px) {
  h2 {
    font-size: 22px;
  }
}

h2 {
  font-size: 24px;
  border-bottom: 1px solid #cccccc;
  color: black;
}

@media (max-width: 767px) {
  h3 {
    font-size: 20px;
  }
}

h3 {
  font-size: 22px;
}

@media (max-width: 767px) {
  h4 {
    font-size: 18px;
  }
}

h4 {
  font-size: 20px;
}

@media (max-width: 767px) {
  h5 {
    font-size: 16px;
  }
}

h5 {
  font-size: 18px;
}

@media (max-width: 767px) {
  h6 {
    font-size: 17px;
  }
}

h6 {
  color: #777777;
  font-size: 16px;
}

blockquote {
  border-left: 4px solid rgb(195, 39, 43);
}

code {
  background: #f8d9da;
}

.video-container {
  position: relative;
  padding-bottom: 56.25%;
  padding-top: 30px;
  height: 0;
  overflow: hidden;
}

.video-container iframe,
.video-container object,
.video-container embed {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

// 版权
p.cc  {
  color: transparent;
  line-height: 0;
  margin:  0;
}

p.cc a  {
  color: transparent;
  text-decoration: none;
  border-bottom: none;
}