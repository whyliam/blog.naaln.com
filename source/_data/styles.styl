// 首页
.brand {
  background: transparent;
  padding: 0;
}

.site-title {
  font: bold 44px/1.22 "Times New Roman", Georgia, Times, sans-serif;
  color: #555;
}

.header-inner {
  padding: 70px 0 20px;
}

.posts-expand .post-meta {
  margin: 3px 0 5px 0;
}
.posts-expand .post-body {
  text-align: left;
}
.posts-expand .post-body img {
  max-width: 80%;
  max-height: 500px;
}

@media (max-width: 767px) {
  .site-title {
    font-size: 2em;
  }

  .site-subtitle {
    display: none;
  }

  .posts-expand .post-title {
    margin: 3px 0 20px 0;
    font-size: 1em;
    font-weight: 600;
  }

  .posts-expand .post-body {
    font-size: 0.875em;
  }

  .posts-expand .post-body img {
    max-width: 90%;
  }
}

ul, ol {
  padding-inline-start: 16px;
}

blockquote {
  border-left: 4px solid rgb(195, 39, 43);
  margin: 0 -8px;
}

hr {
  height: 1px;
}

.video-container {
  position: relative;
  padding-bottom: 56.25%;
  padding-top: 30px;
  height: 0;
  overflow: hidden;
}

.video-container iframe,
.video-container object,
.video-container embed {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

// 版权
p.cc {
  color: transparent;
  line-height: 0;
  margin: 0;
}

p.cc a {
  color: transparent;
  text-decoration: none;
  border-bottom: none;
}


